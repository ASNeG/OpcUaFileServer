echo "PRERM RUN"

if [ -x /sbin/stop ] && [ -e "/etc/init/OpcUaFileServer.conf" ]; then
    # use Ubuntu upstart
    echo "INFO: stopping daemon by upstart"
    /sbin/stop OpcUaFileServer 
elif [ -x /usr/bin/systemctl ] && [ -e "/usr/lib/systemd/system/OpcUaFileServer.service" ]; then
    # use systemd
    echo "INFO: stopping  daemon by systemd"
    /usr/bin/systemctl stop OpcUaFileServer.service
    /usr/bin/systemctl enable OpcUaFileServer.service
else
    # use SYSV init script
    if [ -e "/etc/init.d/OpcUaFileServer" ]; then
        echo "INFO: stopping daemon by SYS init script"
        invoke-rc.d OpcUaFileServer stop || exit $?
        update-rc.d -f OpcUaFileServer remove >/dev/null
    fi
fi

echo "PRERM RETURN"
exit 0

